
@{
    ViewBag.Title = "DisplayTransaction";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DisplayTransaction</h2>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title">@ViewBag.Title</div>
        </div>
        <div class="bootstrap-admin-panel-content">
            <table class="table table-striped table-bordered table-hover" id="example">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Stage Name</th>
                        <th>Check in time</th>
                        <th>Check in date</th>
                        <th>Amount Paid(USD)</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="odd gradeX">
                        <td colspan="5">All Access</td>
                    </tr>
                    @{
                        int totalnumberofall = 0;
                        int totalnumberoflaccess = 0;
                        float aeventfee = 0;
                        float leventfee = 0;
                        float totalfee = 0;
                    }
                    @{int index = 1; }
                    @foreach (List<string> guest in ViewBag.aalists)
                    {
                        if (guest != null)
                        {
                            totalnumberofall += 1;
                            aeventfee += float.Parse(guest[2]);
                            <tr>
                                <td>@index</td>
                                <td><a href="/Guest/AEdit/@guest[5]">@guest[0] @guest[1]</a></td>
                                <td>@guest[4]</td>
                                <td>@guest[3]</td>
                                <td>@guest[2]</td>
                            </tr>
                        }
                        index++;
                    }
                    <tr class="odd gradeX">
                        <td colspan="5">Limited Access</td>
                    </tr>
                    @{index = 1; }
                    @foreach (List<string> guest in ViewBag.aalists)
                    {
                        if (guest != null)
                        {
                            totalnumberofall += 1;
                            totalnumberoflaccess += 1;
                            leventfee += float.Parse(guest[2]);
                            <tr>
                                <td>@index</td>
                                <td><a href="/Guest/LEdit/@guest[5]">@guest[0] @guest[1]</a></td>
                                <td>@guest[4]</td>
                                <td>@guest[3]</td>
                                <td>@guest[2]</td>
                            </tr>
                        }
                        index++;
                    }
                    @{
                        totalfee = aeventfee + leventfee;
                    }
                </tbody>
            </table>
            <br /><hr /><br />
            <p>Total Number of All Access Guests: <span>@totalnumberofall</span></p>
            <p>Total Limited Access Gusts: <span>@totalnumberoflaccess</span></p>
            <p>Total All Access Fees Collected for today: <span>$ @aeventfee</span></p>
            <p>Total Limited Access Fees Collected for today: <span>$ @leventfee</span></p>
            <p>Total Event Fees collected for today:  <span>$ @totalfee</span></p>
        </div>
    </div>
    
</div>
<style>
    .bootstrap-admin-panel-content {
        padding: 20px;
    }
                    a {
        color: blue;
        font-size: 1.2em;
        line-height: 1.2em;
        text-decoration: none;
    }
    a:hover {
        color: blue;
        font-size: 1.3em;
        text-decoration: none;
    }
    span {
        color: red;
    }
    p {
        color: green;
    }
    p, span {
        font-size: 1.2em;
        line-height: 1.2em;
    }
</style>