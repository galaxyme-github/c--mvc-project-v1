
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model mvc.Models.Users
<h2>Users Page</h2>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title">Users Table</div>
            <a href="/User/Create" class="btn create navbar-right">Add New User</a>
        </div>
        <div class="bootstrap-admin-panel-content">
            <table class="table table-striped table-bordered table-hover" id="example">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>User Name</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>User Email</th>
                        <th>Password</th>
                        <th>User Level</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @{int index = 1; }
                    @foreach (List<string> user in ViewBag.userlists)
                    {
                        if (user != null) 
                        {
                            <tr>
                                <td>@index</td>
                                <td>@user[1]</td>
                                <td>@user[2]</td>
                                <td>@user[3]</td>
                                <td>@user[4]</td>
                                <td>@user[5]</td>
                                <td>@user[6]</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = user[0] }) |
                                    @Html.ActionLink("Detail", "Detail", new { id = user[0] }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = user[0] })
                                </td>
                            </tr>
                        }
                        index++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    td a, a.create {
        color: white;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
        padding: 5px 10px;
        background-color: green;
    }

        td a:hover, a.create:hover {
            text-decoration: none;
            background-color: darkgreen;
            color: white;
        }

    .panel-heading {
        position: relative;
    }

    a.create {
        position: absolute;
        right: 4px;
        top: 4px;
    }
</style>