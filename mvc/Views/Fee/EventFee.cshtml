@model mvc.Models.LAcceess

@{
    ViewBag.Title = "EventFee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EventFee</h2>

<div class="row">
    <div class="panel panel-default bootstrap-admin-no-table-panel">
