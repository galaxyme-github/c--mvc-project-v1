
@{
    ViewBag.Title = "ConfirmPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ConfirmPage</h2>

<div class="row">
    <div class="col-md-3 col-lg-3"></div>
    <div class="col-md-6 col-lg-6 card">
        <p>@ViewBag.stagename is @ViewBag.age years old.  @ViewBag.stagename is currently on the guest list.  The fee for @ViewBag.stagename to use the club today is $@ViewBag.eventfee.  Is this fee agreeable?</p>
        <div class="text-center">
            <button class="ok" onclick="location.href='@Url.Action("Succeed", "Guest", new { name = ViewBag.stagename, eventfee = ViewBag.eventfee, id=@ViewBag.id })'">Yes</button>
            <button class="no" onclick="location.href='@Url.Action("Rejected", "Guest", new { name = ViewBag.stagename, eventfee = ViewBag.eventfee, id=@ViewBag.id })'">No</button>
            <button class="over" onclick="location.href='@Url.Action("Override", "Guest", new { name = ViewBag.stagename, eventfee = ViewBag.eventfee, id=@ViewBag.id })'">Override</button>
        </div>
    </div>
    <div class="col-md-3 col-lg-3"></div>
</div>


<style>
    .card {
        background-color: aliceblue;
        box-shadow: 0 0 20px blue;
        border-radius: 10px;
        color: black;
        padding: 20px;
        text-indent: 20px;
        font-size: 1.4em;
    }
    button {
        background-color: green;
        color: white;
        border: none;
        width: 120px;
        margin: 0 15px;
    }
    button:hover {
        background-color: lightgreen;
    }
</style>