
@{
    ViewBag.Title = "CheckINumber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CheckInNumber</h2>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="panel panel-default bootstrap-admin-no-table-panel col-lg-6">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title">Enter the loyalty point number for the All Access guest.</div>
        </div>
        <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
            <form class="form-horizontal" action="/Guest/CheckInNumber" method="post">
                @Html.AntiForgeryToken()
                <fieldset>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="text" id="guestID" name="guestID" class="form-control" placeholder="input here...">
                            <span class="help-block">Woohoo!</span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <button type="reset" class="btn btn-default">Cancel</button>
                </fieldset>
            </form>
        </div>
    </div>
    <div class="col-lg-3"></div>
</div>


<style>
    .form-horizontal {
        padding: 30px;
    }

    input {
        width: 100%;
    }
    .panel {
        padding: 0;
    }

</style>


@Scripts.Render("~/bundles/vendors")
@section scripts
{
    <script type="text/javascript">
        $(function () {
            $("#pointnumber").focus();
            $("button[type='reset']").click(function (e) {
                e.preventDefault();
                window.location.href = "/Guest/AAccess";
            });
        });
    </script>
}