
@{
    ViewBag.Title = "CheckIn Guest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CheckIn Guest</h2>

<div class="row">
    <div class="panel panel-default bootstrap-admin-no-table-panel">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title">@ViewBag.Title</div>
        </div>
        
        <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
            <form class="form-horizontal">
                <fieldset>
                    <div class="form-group">
                        <p>Check in Limited Access Guest</p>
                        <div class="col-lg-12">
                            <textarea id="textarea-wysihtml5" class="form-control textarea-wysihtml5" placeholder="Enter text..." style="width: 100%; height: 200px"></textarea>
                        </div>
                        <p>To check in a guest manually, click <a href="/Guest/LCreate">HERE</a></p>
                    </div>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                    <button type="reset" class="btn btn-default">Cancel</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<style>
    .form-horizontal {
        padding: 30px;
    }

    input {
        width: 100%;
    }

    .textarea-wysihtml5 {
        min-width: 100%;
        max-width: 100%;
    }
</style>

@Scripts.Render("~/bundles/vendors")
@section scripts
{
    <script type="text/javascript">
        $(function () {
            $("#textarea-wysihtml5").focus();
            $("button[type='reset']").click(function (e) {
                e.preventDefault();
                window.location.href = "/Guest/LAccess";
            });
        });
    </script>
}