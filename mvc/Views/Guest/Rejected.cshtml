
@{
    ViewBag.Title = "Rejected";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rejected</h2>

<div class="row">
    <div class="col-md-3 col-lg-3"></div>
    <div class="col-md-6 col-lg-6 card">
        <p>Thank you for considering us for your Event, @ViewBag.stagename. We hope to earn your business next time</p>
        <textarea id="reason" rows="4" cols="50" placeholder="Please write reason to rejected here."></textarea>
        <div class="text-center">
            <button class="reject">Reject</button>
        </div>
    </div>
    <div class="col-md-3 col-lg-3"></div>
</div>


<style>
    .card {
        background-color: aliceblue;
        box-shadow: 0 0 20px blue;
        border-radius: 10px;
        color: black;
        padding: 20px;
        text-indent: 20px;
        font-size: 1.4em;
    }

    button {
        background-color: green;
        color: white;
        border: none;
        width: 120px;
        margin: 0 15px;
    }

    button:hover {
        background-color: lightgreen;
    }
    textarea {
        width: 100%;
        margin-top: 20px;
        margin-bottom: 20px;
        padding: 20px;
    }

</style>
