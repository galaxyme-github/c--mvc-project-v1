@model IEnumerable<mvc.Models.History>

@{
    ViewBag.Title = "PartyDateHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PartyDateHistory</h2>

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="text-muted bootstrap-admin-box-title">PartyDate History Table</div>
        </div>
        <div class="bootstrap-admin-panel-content">
            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>partydate</th>
                        <th>party_time</th>
                        <th>event_fee</th>
                        <th>checkin_name</th>
                        <th>TermsRejected</th>
                        <th>reason</th>
                    </tr>
                </thead>
                <tbody>
                    @{int index = 1; }
                    @foreach (List<string> guest in ViewBag.historylist)
                    {
                        if (guest != null)
                        {
                            <tr>
                                <td>@index</td>
                                <td>
                                    <a data-toggle="modal" data-target="#detail-@guest[0]">@guest[1].Split(' ')[0]</a>
                                    <div id="detail-@guest[0]" class="modal fade" role="dialog">
                                        <div class="modal-dialog">
                                            <!-- Modal content-->
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    <h4 class="modal-title">Information</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <p>
                                                        On this day, @guest[1].Split(' ')[0], I, @guest[8] @guest[9] agree to @guest[4] <br />I have paid $ @guest[3] for the use of the venue for my event.<br />
                                                        The execution of this agreement has been witnessed by:<br /> @guest[5] on this Date @guest[1].Split(' ')[0].
                                                    </p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </td>
                                <td>@guest[2]</td>
                                <td>@guest[3]</td>
                                <td>@guest[5]</td>
                                <td>@guest[6]</td>
                                <td>@guest[7]</td>
                            </tr>
                        }
                        index++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    td a, a.create {
        color: white;
        text-decoration: none;
        cursor: pointer;
        display: inline-block;
        padding: 5px 10px;
        background-color: green;
    }

        td a:hover, a.create:hover {
            text-decoration: none;
            background-color: darkgreen;
            color: white;
        }

    .panel-heading {
        position: relative;
    }

    a.create {
        position: absolute;
        right: 4px;
        top: 4px;
    }

    .modal-body p {
        overflow-wrap: break-word;
        word-wrap: break-word;
        hyphens: auto;
    }
    
</style>
